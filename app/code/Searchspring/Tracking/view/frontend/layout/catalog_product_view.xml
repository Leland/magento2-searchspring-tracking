<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="//cdn.searchspring.net/intellisuggest/is.min.js" src_type="url"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Product\View" name="searchspring.product.info"
                   template="Searchspring_Tracking::product/view/form.phtml" after="product.info">
                <arguments>
                    <argument name="searchspring_pdp_view_model"
                              xsi:type="object">Searchspring\Tracking\ViewModel\PdpViewModel
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
