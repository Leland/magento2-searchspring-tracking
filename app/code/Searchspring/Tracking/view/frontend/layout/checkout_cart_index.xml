<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="//cdn.searchspring.net/intellisuggest/is.min.js" src_type="url"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Checkout\Block\Cart" name="searchspring.checkout.cart"
                   template="Searchspring_Tracking::cart.phtml" after="checkout.cart">
                <arguments>
                    <argument name="searchspring_cart_view_model"
                              xsi:type="object">Searchspring\Tracking\ViewModel\CartViewModel
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
